{
  "name": "my-tv-shows-status",
  "version": "1.0.0",
  "description": "a better text editor to keep track of your favorite tv shows",
  "author": "Cristi Ciobanu",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/c-ciobanu/my-tv-shows-status.git"
  },
  "scripts": {
    "npm-server": "cd server && npm install",
    "npm-client": "cd client && npm install",
    "install-all": "npm install && run-s npm-server npm-client",
    "seed-data": "mongorestore seed-data",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
    "all": "run-p server client"
  },
  "devDependencies": {
    "npm-run-all": "4.1.3"
  }
}
